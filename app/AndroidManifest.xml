<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="no.hnilsen.bootstrapper"
          android:versionCode="1"
          android:versionName="0.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16" />

    <application android:icon="@drawable/ic_launcher_android"
                 android:label="@string/app_name"
                 android:theme="@style/Theme.AndFragBootstrapTheme">
        <!-- mainListItems fragment for mainListItems/pollen lists -->
        <activity android:name=".app.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- pollen lists activity -->
        <activity android:name=".app.activities.SecondActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>
</manifest>